<p id="notice"><%= notice %></p>

<h1>Sport Centers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Encrypted password</th>
      <th>Location</th>
      <th>Description</th>
      <th>Photo</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sport_centers.each do |sport_center| %>
      <tr>
        <td><%= sport_center.name %></td>
        <td><%= sport_center.email %></td>
        <td><%= sport_center.encrypted_password %></td>
        <td><%= sport_center.location %></td>
        <td><%= sport_center.description %></td>
        <td><%= sport_center.photo %></td>
        <td><%= sport_center.phone_number %></td>
        <td><%= link_to 'Show', sport_center %></td>
        <td><%= link_to 'Edit', edit_sport_center_path(sport_center) %></td>
        <td><%= link_to 'Destroy', sport_center, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

